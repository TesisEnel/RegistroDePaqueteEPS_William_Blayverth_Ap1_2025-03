@page "/paquetesusuario/create"
@inject NavigationManager NavManager
@inject PaquetesService paquetesService
@inject EmailManager emailManager
@inject UserManager<ApplicationUser> UserManager
@inject AuthenticationStateProvider AuthenticationStateProvider
@rendermode InteractiveServer

<SectionContent SectionName="TituloPagina">
    <h1>PAQUETES</h1>
</SectionContent>

<div class="glass-container">

    <div>
        <h3 class="section-title">Registrar Nuevo Paquete</h3>

        <EditForm Model="NuevoPaquete" OnValidSubmit="GuardarPaquete">
            <DataAnnotationsValidator />

            @* --- 1. DATOS GENERALES --- *@
            <div class="form-grid">
                <div class="form-item">
                    <label>Número de Tracking</label>
                    <input type="text" class="input-box" @bind-value="NuevoPaquete.NumeroTracking" placeholder="Ej: 1Z999..." />
                    <ValidationMessage For="@(() => NuevoPaquete.NumeroTracking)" />
                </div>

                <div class="form-item">
                    <label>Número de EPS</label>
                    <input type="text" class="input-box" @bind-value="NuevoPaquete.NumeroEPS" placeholder="Ej: 064-000..." />
                    <ValidationMessage For="@(() => NuevoPaquete.NumeroEPS)" />
                </div>

                <div class="form-item">
                    <label>Suplidor / Tienda</label>
                    <input type="text" class="input-box" @bind-value="NuevoPaquete.Suplidor" placeholder="Ej: Amazon" />
                    <ValidationMessage For="@(() => NuevoPaquete.Suplidor)" />
                </div>

                <div class="form-item">
                    <label>Servicio / Categoría</label>
                    <select class="input-box" @bind="NuevoPaquete.Categoria">
                        <option value="">Seleccione...</option>
                        <option value="Priority">Priority</option>
                        <option value="Standard">Standard</option>
                        <option value="Economy">Economy</option>
                    </select>
                    <ValidationMessage For="@(() => NuevoPaquete.Categoria)" />
                </div>

                <div class="options-row">
                    <div class="checkbox-group">
                        <label class="switch">
                            <InputCheckbox @bind-Value="NuevoPaquete.CondicionEspecial" />
                            <span class="slider round"></span>
                        </label>
                        <span class="checkbox-label">Condición Especial</span>
                    </div>

                    <div class="checkbox-group">
                        <label class="switch">
                            <InputCheckbox @bind-Value="NuevoPaquete.Retenido" />
                            <span class="slider round"></span>
                        </label>
                        <span class="checkbox-label">Retenido en Aduanas</span>
                    </div>
                </div>
            </div>

            @* --- 2. SECCIÓN DE DETALLE (LETRAS BLANCAS) --- *@
            <div class="detail-section">
                <h4 class="detail-title">Contenido del Paquete</h4>

                @* Inputs para agregar detalle *@
                <div class="detail-inputs-row">
                    <div class="form-item" style="flex: 2;">
                        <label>Descripción</label>
                        <input type="text" class="input-box small-input" @bind="ArticuloTemporal.Descripcion" placeholder="Ej: Zapatos" />
                    </div>

                    <div class="form-item">
                        <label>Valor (USD)</label>
                        <input type="number" class="input-box small-input" @bind="ArticuloTemporal.Valor" placeholder="0.00" />
                    </div>

                    <div class="form-item">
                        <label>Peso (Lb)</label>
                        <input type="number" class="input-box small-input" @bind="ArticuloTemporal.Peso" placeholder="0.00" />
                    </div>

                    <div class="form-item" style="justify-content: flex-end;">
                        <button type="button" class="btn-add" @onclick="AgregarDetalle">
                            <i class="bi bi-plus-circle"></i> Agregar
                        </button>
                    </div>
                </div>

                @* Tabla de detalles *@
                <div class="table-responsive mt-3">
                    <table class="custom-table">
                        <thead>
                            <tr>
                                <th>Descripción</th>
                                <th>Valor</th>
                                <th>Peso</th>
                                <th style="text-align: center;">Opciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ListaArticulos.Any())
                            {
                                @foreach (var item in ListaArticulos)
                                {
                                    <tr>
                                        <td>@item.Descripcion</td>
                                        <td>US$ @item.Valor.ToString("N2")</td>
                                        <td>@item.Peso.ToString("N2") lb</td>
                                        <td style="text-align: center;">
                                            <button type="button" class="btn-icon-small delete" @onclick="() => RemoverDetalle(item)">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4" class="text-center text-muted" style="color: rgba(255,255,255,0.7) !important;">
                                        Aún no se han agregado artículos.
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @* Resumen de Totales *@
                <div class="totals-row">
                    <div class="total-item">
                        <span>Cant:</span> <strong>@ListaArticulos.Count</strong>
                    </div>
                    <div class="total-item">
                        <span>Peso Total:</span> <strong>@NuevoPaquete.Peso.ToString("N2") lb</strong>
                    </div>
                    <div class="total-item">
                        <span>Total (CIF):</span> <strong style="color: #78BE42; font-size: 1.3rem;">US$ @NuevoPaquete.Total.ToString("N2")</strong>
                    </div>
                </div>
            </div>

            @* --- BOTONES DE ACCIÓN --- *@
            <div class="action-buttons">
                <a href="/paquetesusuario" class="btn-cancel">Cancelar</a>
                <button type="button" @onclick="GuardarPaquete" class="btn-save">Guardar Paquete</button>
            </div>

        </EditForm>
    </div>

</div>

@code {
    public Paquetes NuevoPaquete { get; set; } = new Paquetes();
    public EstatusPaqueteDetalles EstatusPaquete = new EstatusPaqueteDetalles();

    // Lógica local para el Detalle
    public List<ArticuloDetalle> ListaArticulos { get; set; } = new List<ArticuloDetalle>();
    public ArticuloDetalle ArticuloTemporal { get; set; } = new ArticuloDetalle();

    public class ArticuloDetalle
    {
        public string Descripcion { get; set; } = "";
        public decimal Valor { get; set; }
        public double Peso { get; set; }
    }

    private void AgregarDetalle()
    {
        if (string.IsNullOrWhiteSpace(ArticuloTemporal.Descripcion) || ArticuloTemporal.Valor <= 0)
        {
            return;
        }

        ListaArticulos.Add(new ArticuloDetalle
        {
            Descripcion = ArticuloTemporal.Descripcion,
            Valor = ArticuloTemporal.Valor,
            Peso = ArticuloTemporal.Peso
        });

        ArticuloTemporal = new ArticuloDetalle(); // Limpiar
        RecalcularTotales();
    }

    private void RemoverDetalle(ArticuloDetalle item)
    {
        ListaArticulos.Remove(item);
        RecalcularTotales();
    }

    private void RecalcularTotales()
    {
        NuevoPaquete.Peso = ListaArticulos.Sum(x => x.Peso);
        NuevoPaquete.Contenido = string.Join(", ", ListaArticulos.Select(x => x.Descripcion));
    }

    public void AgregarEstatusInicial()
    {
        EstatusPaquete.EstatusPaqueteId = 1;
        EstatusPaquete.Fecha = DateTime.Now;
        NuevoPaquete.EstatusPaquete.Add(EstatusPaquete);
    }

    private async Task GuardarPaquete()
    {
        if (string.IsNullOrEmpty(NuevoPaquete.NumeroTracking) || string.IsNullOrEmpty(NuevoPaquete.NumeroEPS)) return;

        var appUser = await UserManager.FindByNameAsync(NuevoPaquete.NumeroEPS);
        if (appUser != null)
        {
            NuevoPaquete.ClienteId = appUser.Id;
        }

        AgregarEstatusInicial();

        var guardado = await paquetesService.Guardar(NuevoPaquete);

        if (guardado)
        {
            if (appUser != null)
            {
                await emailManager.SendUserOrderReceivedAsync(appUser.Email, NuevoPaquete.NumeroRecepcion);
            }
            NavManager.NavigateTo("/paquetesusuario");
        }
    }
}