@page "/delivery"
@rendermode InteractiveServer

<SectionContent SectionName="TituloPagina">
    <h1>DELIVERY</h1>
</SectionContent>

<div class="glass-container">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <div class="search-bar-container" style="margin-bottom: 0;">
            <div class="search-box">
                <i class="bi bi-search search-icon"></i>
                <input type="text" placeholder="Buscar por Dirección, Tracking..." />
            </div>
        </div>

        <a href="/delivery/create" class="btn-new">
            <i class="bi bi-truck"></i> Solicitar Delivery
        </a>
    </div>

    <div class="table-header-row">
        <div class="col-cell">Fecha</div>
        <div class="vertical-line"></div>
        <div class="col-cell wide">Dirección de Entrega</div>
        <div class="vertical-line"></div>
        <div class="col-cell">Contacto</div>
        <div class="vertical-line"></div>
        <div class="col-cell">Paquetes</div>
        <div class="vertical-line"></div>
        <div class="col-cell">Costo</div>
        <div class="vertical-line"></div>
        <div class="col-cell">Estatus</div>
        <div class="vertical-line"></div>
        <div class="col-cell small">Acciones</div>
    </div>

    <div class="rows-container">
        @foreach (var item in ListaEjemplo)
        {
            <div class="data-row justify-content-center">
                <div class="col-cell">@item.Fecha.ToString("dd/MM/yyyy")</div>
                <div class="vertical-line"></div>

                <div class="col-cell wide">@item.Direccion</div>
                <div class="vertical-line"></div>

                <div class="col-cell">@item.Contacto</div>
                <div class="vertical-line"></div>

                <div class="col-cell">
                    <span class="badge-count">@item.Cantidad</span>
                </div>
                <div class="vertical-line"></div>

                <div class="col-cell">RD$ @item.Costo.ToString("N2")</div>
                <div class="vertical-line"></div>

                <div class="col-cell status-col" style="color:@GetStatusColor(item.Estado)">
                    <i class="@GetStatusIcon(item.Estado)" style="font-size: 1.2rem;"></i>
                    <span style="font-weight: 700; font-size: 0.8rem;">@item.Estado</span>
                </div>

                <div class="vertical-line"></div>

                <div class="col-cell small">
                    <button type="button" class="btn-icon edit" @onclick="() => AbrirModal(item)">
                        <i class="bi bi-eye-fill"></i>
                    </button>
                </div>
            </div>
        }
    </div>
</div>

@if (mostrarModal)
{
    <div class="modal-backdrop" @onclick="CerrarModal">
        <div class="modal-window-blue" @onclick:stopPropagation>

            <div class="eps-header">
                <img src="/Imagenes/EPS_Barra_Superior.png" alt="EPS Logo" />
                <button type="button" class="btn-close-x" @onclick="CerrarModal">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>

            <div class="eps-body-blue">
                <h3 style="border-bottom:1px solid rgba(255,255,255,0.3); padding-bottom:10px; margin-bottom:20px;">
                    Detalle de Delivery
                </h3>

                <div class="info-grid">
                    <div class="info-item full-width">
                        <span class="label">Dirección:</span>
                        <div class="value-box">@ItemSeleccionado.Direccion</div>
                    </div>
                    <div class="info-item">
                        <span class="label">Teléfono:</span>
                        <span class="value">@ItemSeleccionado.Contacto</span>
                    </div>
                    <div class="info-item">
                        <span class="label">Total a Pagar:</span>
                        <span class="value">RD$ @ItemSeleccionado.Costo.ToString("N2")</span>
                    </div>
                    <div class="info-item full-width">
                        <span class="label">Notas:</span>
                        <div class="value-box">Casa color verde, portón negro. Llamar al llegar.</div>
                    </div>
                </div>

                <h4 style="margin-top: 25px; color: white; border-bottom: 1px solid rgba(255,255,255,0.2); padding-bottom: 5px;">
                    Paquetes
                </h4>

                <div class="table-responsive">
                    <table class="custom-table-modal">
                        <thead>
                            <tr>
                                <th>Tracking</th>
                                <th>Descripción</th>
                                <th style="text-align: right;">Peso</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>1Z999999999</td>
                                <td>Zapatos Nike</td>
                                <td style="text-align: right;">2.50 lb</td>
                            </tr>
                            <tr>
                                <td>TBA456789123</td>
                                <td>Ropa Shein</td>
                                <td style="text-align: right;">1.10 lb</td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <div class="modal-footer-actions">
                    <button type="button" class="btn-blue-cancel" @onclick="CerrarModal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    // DATOS DUMMY PARA VISUALIZACIÓN
    public class MockDelivery
    {
        public DateTime Fecha { get; set; }
        public string Direccion { get; set; }
        public string Contacto { get; set; }
        public int Cantidad { get; set; }
        public decimal Costo { get; set; }
        public string Estado { get; set; }
    }

    private List<MockDelivery> ListaEjemplo = new List<MockDelivery>
    {
        new MockDelivery { Fecha = DateTime.Now, Direccion = "Calle Sol #45, Santiago", Contacto = "(809) 555-1234", Cantidad = 2, Costo = 250, Estado = "Pendiente" },
        new MockDelivery { Fecha = DateTime.Now.AddDays(-1), Direccion = "Av. Juan Pablo Duarte, Plaza X", Contacto = "(829) 999-8888", Cantidad = 1, Costo = 150, Estado = "En Ruta" },
        new MockDelivery { Fecha = DateTime.Now.AddDays(-2), Direccion = "Residencial Las Flores A3", Contacto = "(809) 222-3333", Cantidad = 3, Costo = 350, Estado = "Entregado" }
    };

    private bool mostrarModal = false;
    private MockDelivery ItemSeleccionado = new MockDelivery();

    private void AbrirModal(MockDelivery item)
    {
        ItemSeleccionado = item;
        mostrarModal = true;
    }

    private void CerrarModal()
    {
        mostrarModal = false;
    }

    private string GetStatusColor(string status) => status switch
    {
        "Entregado" => "#78BE42",
        "En Ruta" => "#0191A9",
        "Pendiente" => "#FFB130",
        _ => "#333"
    };

    private string GetStatusIcon(string status) => status switch
    {
        "Entregado" => "bi bi-check-circle-fill",
        "En Ruta" => "bi bi-scooter",
        "Pendiente" => "bi bi-hourglass-split",
        _ => "bi bi-circle"
    };
}