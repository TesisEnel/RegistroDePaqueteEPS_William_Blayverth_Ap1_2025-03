@page "/reembolsos"
@inject ReembolsosService reembolsosService
@inject UserManager<ApplicationUser> UserManager
@inject AuthenticationStateProvider AuthenticationStateProvider
@rendermode InteractiveServer

<SectionContent SectionName="TituloPagina">
    <h1>REEMBOLSOS</h1>
</SectionContent>

<div class="glass-container">

    <div class="d-flex justify-content-between align-items-center mb-3">

        <div class="search-bar-container" style="margin-bottom: 0;">
            <div class="search-box">
                <i class="bi bi-search search-icon"></i>
                <input type="text" @bind="terminoBusqueda" @bind:event="oninput" placeholder="Buscar por Asunto, Tracking..." />
            </div>
        </div>

        <a href="/reembolsos/create" class="btn-new">
            <i class="bi bi-plus-lg"></i> Solicitar Reembolso
        </a>
    </div>

    <div class="table-header-row">
        <div class="col-cell">Fecha</div>
        <div class="vertical-line"></div>
        <div class="col-cell wide">Asunto</div>
        <div class="vertical-line"></div>
        <div class="col-cell">Tipo</div>
        <div class="vertical-line"></div>
        <div class="col-cell">Ref. Tracking</div>
        <div class="vertical-line"></div>
        <div class="col-cell">Monto</div>
        <div class="vertical-line"></div>
        <div class="col-cell">Estatus</div>
        <div class="vertical-line"></div>
        <div class="col-cell small">Acciones</div>
    </div>

    <div class="rows-container">
        
        {
            <div class="data-row justify-content-center">
                <span class="text-muted">No se encontraron solicitudes.</span>
            </div>
        }
        else
        {
            
            {
                <div class="data-row justify-content-center">

                    <div class="col-cell"></div>
                    <div class="vertical-line"></div>

                    <div class="col-cell wide"></div>
                    <div class="vertical-line"></div>

                    <div class="col-cell"></div>
                    <div class="vertical-line"></div>

                    <div class="col-cell"></div>
                    <div class="vertical-line"></div>

                    <div class="col-cell"></div>
                    <div class="vertical-line"></div>

                    @* ESTATUS CON COLOR E ICONO *@
                    <div class="col-cell status-col" style="color:">
                        <i class=""></i>
                        <span style="font-weight: 700; font-size: 0.8rem;"></span>
                    </div>

                    <div class="vertical-line"></div>

                    <div class="col-cell small">
                        <button type="button" class="btn-icon edit" title="Ver Detalles"
                                ">
                            <i class="bi bi-eye-fill"></i>
                        </button>
                    </div>
                </div>
            }
        }
    </div>

</div>

@* --- MODAL DE DETALLES (ESTILO AZUL CENTRADO) --- *@
@if (mostrarModal)
{
    <div class="modal-backdrop" @onclick="CerrarModal">
        <div class="modal-window-blue" @onclick:stopPropagation>

            <div class="eps-header">
                <img src="/Imagenes/EPS_Barra_Superior.png" alt="EPS Logo" />
                <button type="button" class="btn-close-x" @onclick="CerrarModal">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>

            <div class="eps-body-blue">
                <h3 style="border-bottom:1px solid rgba(255,255,255,0.3); padding-bottom:10px; margin-bottom:20px;">
                    Detalle de Reembolso
                </h3>

                @* Grid de Información General *@
                <div class="info-grid">
                    <div class="info-item">
                        <span class="label">Solicitante ID:</span>
                        <span class="value"></span>
                    </div>
                    <div class="info-item">
                        <span class="label">Método Pago:</span>
                        <span class="value"></span>
                    </div>
                    <div class="info-item full-width">
                        <span class="label">Observaciones:</span>
                        <div class="value-box">
                           
                        </div>
                    </div>
                </div>

                @* Tabla Interna de Artículos (Letras Blancas) *@
                <h4 style="margin-top: 25px; color: white; border-bottom: 1px solid rgba(255,255,255,0.2); padding-bottom: 5px;">
                    Artículos Reclamados
                </h4>

                <div class="table-responsive">
                    <table class="custom-table-modal">
                        <thead>
                            <tr>
                                <th>Descripción</th>
                                <th style="text-align: right;">Valor</th>
                            </tr>
                        </thead>
                        <tbody>
                            
                            {
                               
                                {
                                    <tr>
                                        <td></td>
                                        <td style="text-align: right;"></td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="2" style="text-align: center; opacity: 0.7;">No hay detalles registrados.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @* Acciones de Administrador (Solo visibles para Admin) *@
                <AuthorizeView Roles="Admin">
                    <Authorized>
                        <div style="margin-top: 25px; padding-top: 15px; border-top: 1px solid rgba(255,255,255,0.3);">
                            <label style="color: white; font-weight: bold; margin-bottom: 10px; display: block;">Gestionar Estado:</label>
                            <div style="display: flex; gap: 10px; flex-wrap: wrap;">
                                <button class="btn-status btn-approve" @onclick='() => CambiarEstado("Aprobado")'>
                                    <i class="bi bi-check2"></i> Aprobar
                                </button>
                                <button class="btn-status btn-reject" @onclick='() => CambiarEstado("Rechazado")'>
                                    <i class="bi bi-x-lg"></i> Rechazar
                                </button>
                                <button class="btn-status btn-process" @onclick='() => CambiarEstado("En Proceso")'>
                                    <i class="bi bi-arrow-repeat"></i> En Proceso
                                </button>
                            </div>
                        </div>
                    </Authorized>
                </AuthorizeView>

                <div class="modal-footer-actions">
                    <button type="button" class="btn-blue-cancel" @onclick="CerrarModal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
}

